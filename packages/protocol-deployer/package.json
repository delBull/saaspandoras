{
  "name": "@saaspandoras/protocol-deployer",
  "version": "0.1.0",
  "private": true,
  "description": "Smart Contracts as a Service (SCaaS) deployment system for W2E protocols",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "compile": "hardhat compile",
    "test": "hardhat test",
    "deploy:sepolia": "hardhat run scripts/deploy.ts --network sepolia",
    "deploy:base": "hardhat run scripts/deploy.ts --network base",
    "verify:sepolia": "hardhat verify --network sepolia",
    "verify:base": "hardhat verify --network base",
    "clean": "hardhat clean && rm -rf dist"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.9.0",
    "thirdweb": "^5.106.0",
    "ethers": "^5.7.2",
    "dotenv": "^16.5.0",
    "erc721a": "^4.2.3"
  },
  "devDependencies": {
    "@types/node": "^22.15.34",
    "hardhat": "^2.19.0",
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@nomiclabs/hardhat-etherscan": "^3.1.7",
    "typescript": "^5.4.5",
    "ts-node": "^10.9.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
