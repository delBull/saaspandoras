{
  "name": "@pandoras/protocol-deployer",
  "version": "0.1.0",
  "description": "SCaaS Protocol Deployer - Thirdweb Engine Integration",
  "main": "dist/index.js",
  "types": "dist/index.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "lint": "eslint src --ext .ts",
    "test": "jest",
    "test:unit": "forge test --match-path 'test/*.t.sol' -v",
    "test:integration": "forge test --match-path 'test/integration/*.t.sol' -v",
    "test:gas": "forge test --match-path 'test/*.t.sol' --gas-report",
    "test:security": "forge test --match-path 'test/security/*.t.sol' -v",
    "test:all": "forge test -v",
    "coverage": "forge coverage --report lcov",
    "clean": "rm -rf dist out cache",
    "deploy:local": "forge script script/Deploy.s.sol --fork-url http://localhost:8545 --broadcast",
    "deploy:testnet": "forge script script/Deploy.s.sol --rpc-url $BASE_GOERLI_RPC_URL --private-key $PRIVATE_KEY --broadcast --verify"
  },
  "keywords": [
    "blockchain",
    "ethereum",
    "smart-contracts",
    "thirdweb",
    "scaaas",
    "foundry",
    "solidity"
  ],
  "author": "Pandora's Team",
  "license": "MIT",
  "dependencies": {
    "@thirdweb-dev/sdk": "^4.0.9",
    "ethers": "^6.8.1"
  },
  "devDependencies": {
    "@types/node": "^20.8.10",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "eslint": "^8.52.0",
    "jest": "^29.7.0",
    "typescript": "^5.2.2"
  }
}
