{
  "extends": "@saasfly/typescript-config/base.json",
  "compilerOptions": {
    "tsBuildInfoFile": ".next/tsconfig.tsbuildinfo",
    "types": [
      "next",
      "next/types/global"
    ],
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "~/*": [
        "./src/*"
      ],
      "@/*": [
        "./src/*"
      ],
      "@pandoras/gamification": [
        "../../packages/gamification/src"
      ],
      "@pandoras/gamification/*": [
        "../../packages/gamification/src/*"
      ],
      "@saasfly/ui": [
        "../../packages/ui/src"
      ],
      "@saasfly/ui/*": [
        "../../packages/ui/src/*"
      ],
      "@saasfly/db": [
        "../../packages/db/index.ts"
      ],
      "@saasfly/api": [
        "../../packages/api/src"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}