# --- PANDORA CORE STAGING CONFIG ---
# (Based on Staging Go-Live Checklist)

# 1. Base Configuration
NODE_ENV=staging
CORE_ENV=staging
NEXT_PUBLIC_APP_URL=https://staging.saaspandoras.com
NEXT_PUBLIC_API_URL=https://staging.saaspandoras.com/api

# 2. Database (Pandora Staging DB)
DATABASE_URL=postgresql://user:password@host:5432/pandora_staging_db
# REDIS_URL=redis://localhost:6379 (If used)

# 3. Security Secrets
AUTH_SECRET=changeme_staging_auth_secret
WEBHOOK_SIGNING_SECRET=stg_wh_secret_changeme
CRON_SECRET=changeme_staging_cron_check

# 4. Pandora Core <-> Edge Keys
# If this app ACTS as Core, these are the keys needed to validate incoming requests or sign webhooks?
# Actually, Checklist says: "PANDORA_CORE_KEY (staging)", "CORE_CALLBACK_SECRET (staging)"
PANDORA_CORE_KEY=core_stg_key_changeme
CORE_CALLBACK_SECRET=stg_callback_secret_changeme

# 5. Blockchain (Sepolia / Testnet)
RPC_URL=https://sepolia.infura.io/v3/YOUR_KEY
# RELAY_PRIVATE_KEY should be a fresh staging wallet with Sepolia ETH
RELAY_PRIVATE_KEY=0x_staging_private_key
# Contracts (Sepolia)
NEXT_PUBLIC_CHAIN_NAME=sepolia
NEXT_PUBLIC_NFT_CONTRACT_ADDRESS=0x_sepolia_nft_address
NEXT_PUBLIC_POOL_CONTRACT_ADDRESS=0x_sepolia_pool_address
NEXT_PUBLIC_GOVERNANCE_CONTRACT_ADDRESS=0xe225DDceEfb5bd0957Ed165193267691083E25ED
NEXT_PUBLIC_APPLY_PASS_NFT_ADDRESS=0x_sepolia_apply_pass_address

# 6. Telegram Staging Bot
TELEGRAM_BOT_TOKEN=123456789:StagingBotToken
TELEGRAM_MINIAPP_URL=https://staging.saaspandoras.com/tgapp
TELEGRAM_MINIAPP_WEBHOOK_SECRET=changeme_webhook_secret

# 7. ThirdWeb / WalletConnect (Testnet Project IDs)
NEXT_PUBLIC_THIRDWEB_CLIENT_ID=changeme
THIRDWEB_SECRET_KEY=changeme
NEXT_PUBLIC_WALLET_CONNECT_PROJECT_ID=changeme