# --- PANDORA CORE PRODUCTION CONFIG ---
# (Based on Production Go-Live Checklist)

# 1. Base Configuration
NODE_ENV=production
CORE_ENV=production
# Update with REAL custom domain
NEXT_PUBLIC_APP_URL=https://dashboard.saaspandoras.com
NEXT_PUBLIC_API_URL=https://dashboard.saaspandoras.com/api

# 2. Database (Pandora Production DB)
# MUST use a separate DB instance with backups enabled
DATABASE_URL=postgresql://user:password@host:5432/pandora_production_db
# REDIS_URL=redis://localhost:6379 (Dedicated Redis)

# 3. Security Secrets
# GENERATE STRONG RANDOM STRINGS (e.g. `openssl rand -hex 32`)
AUTH_SECRET=changeme_prod_auth_secret_STRONG
WEBHOOK_SIGNING_SECRET=prod_wh_secret_changeme_STRONG
CRON_SECRET=changeme_prod_cron_check_STRONG

# 4. Pandora Core <-> Edge Keys
# Production keys MUST act differently than Staging
PANDORA_CORE_KEY=core_prod_key_changeme
CORE_CALLBACK_SECRET=prod_callback_secret_changeme

# 5. Blockchain (Base Mainnet / Ethereum Mainnet)
# USE PAID RPC PROVIDER (Alchemy/Infura) for reliability
RPC_URL=https://mainnet.infura.io/v3/YOUR_KEY
# RELAY_PRIVATE_KEY for Production Relayer (Funded with real ETH)
RELAY_PRIVATE_KEY=0x_production_private_key
# Contracts (Base Mainnet)
NEXT_PUBLIC_CHAIN_NAME=base
NEXT_PUBLIC_NFT_CONTRACT_ADDRESS=0x_prod_nft_address
NEXT_PUBLIC_POOL_CONTRACT_ADDRESS=0x_prod_pool_address
NEXT_PUBLIC_GOVERNANCE_CONTRACT_ADDRESS=0x4122D7A6F11286B881F8332D8c27deBcC922B2fA
NEXT_PUBLIC_APPLY_PASS_NFT_ADDRESS=0x_prod_apply_pass_address

# 6. Telegram Production Bot
# NEW Bot created via BotFather explicitly for Production
TELEGRAM_BOT_TOKEN=987654321:ProductionBotToken
TELEGRAM_MINIAPP_URL=https://dashboard.saaspandoras.com/tgapp
TELEGRAM_MINIAPP_WEBHOOK_SECRET=changeme_prod_webhook_secret

# 7. ThirdWeb / WalletConnect (Production Client IDs)
NEXT_PUBLIC_THIRDWEB_CLIENT_ID=changeme_prod
THIRDWEB_SECRET_KEY=changeme_prod_secret
NEXT_PUBLIC_WALLET_CONNECT_PROJECT_ID=changeme_prod
